{
  "compilerOptions": {
    "baseUrl": "src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2022",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES2022"
    ],
    "types": ["node", "obsidian"]
  },
  "include": [
    "src/**/*.ts"
  ]
}
